#include "declarations.nddl"
#include "platform.nddl"

class SurfaceController extends AgentTimeline {	
    int surface_delay;
    int surface_period;
    
        
    SurfaceController(int delay, int period) {
    	super(Internal);
    	surface_delay = delay;
    	surface_period = period;
    }
        
    predicate Surface {
    	start >= 0;
    	bool requested;
    }
    
    predicate Underwater {
    	int speriod;
    	int earliest_start;
    	int latest_end;
    	bool requested;
        bool surface; 
        latest_end <= start + speriod;
        latest_end >= start + 1;
    }
}

class Navigator extends AgentTimeline {
	
	Navigator(Mode _mode) {
		super(_mode, "Idle");
	}
    
    Navigator(Mode _mode, bool plan) {
	    super(_mode, "Idle", plan);
    }
	
	predicate Idle {}
	
	predicate Going {
		float latitude, longitude, depth, speed;
		int secs, estimated_duration, duration_interval;
	}
	
	predicate Staying {
		float latitude, longitude, depth;
		int secs;
	}
}



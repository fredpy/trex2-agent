#include "TREX.nddl"
#include "navigator.nddl"

class EstimatedState extends AgentTimeline {

	EstimatedState(Mode _mode) {
		super(_mode, "Boot");
	};
	
	predicate Boot {};
	
	predicate Position {
		float latitude;
		float longitude;
		float z;
	};
};

class Reference extends AgentTimeline {
	
	Reference(Mode _mode) {
		super(_mode, "Boot");
	};
	
	predicate Boot {};
	
	predicate Going {
		float latitude;
		float longitude;
		float z;
		float speed;	
	};
	
	predicate At {
		float latitude;
		float longitude;
		float z;
		float speed;
	};
}

class PlanControlState extends AgentTimeline {
	
	PlanControlState(Mode _mode) {
		super(_mode, "Boot");
	}
	
	predicate Boot {};
	
	predicate Blocked  {};
	
	predicate Ready {};
	
	predicate Initializing {
		string plan;	
	};
	
	predicate Executing {
		string plan;
	};
};

class OperationalLimits extends AgentTimeline {

	OperationalLimits(Mode _mode) {
		super(_mode, "Boot");
	}
	
	predicate Boot {};

	predicate Limits {
		float depth;
		float altitude;
		float speed;		
	};
};

class Gps extends AgentTimeline {

	Gps(Mode _mode) {
		super(_mode, "Boot");
	}
	
	predicate Boot {};
	
	predicate Valid {}
	
	predicate Invalid {}
}


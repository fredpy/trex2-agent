#include "TREX.nddl"
#include "navigator.nddl"
#include "platform.nddl"

Navigator::At {

	contained_by(condition Reference.At arr);
		latitude == arr.latitude;
		longitude == arr.longitude;
		z == arr.z;
		speed == arr.speed;
	
	met_by(effect Going g);
		latitude == g.latitude;
		longitude == g.longitude;
		z == g.z;
		speed == g.speed;
		
	duration >= secs; 
}

Navigator::Going {

	contained_by(condition ControlMode.TREX c);
		c.start + 1 <= start;

	contained_by(Reference.Going g);
		latitude == g.latitude;
		longitude == g.longitude;
		z == g.z;
		speed == g.speed;	

	any(condition EstimatedState.Position origin);
		orig_lat == origin.latitude;
		orig_lon == origin.longitude;
		orig_z == origin.z;
		origin.start + 1 == start;
}
VehicleState::Boot {
    contained_by(Navigator.Idle);
}

ManeuverController::Maneuver {
    ends(Navigator.Going go);
    go.start <= start;

    lat_deg == go.latitude;
    lon_deg == go.longitude;
    depth == go.depth;
    speed == go.speed;
    secs == go.secs;
}
#include "declarations.nddl"
#include "platform.nddl"

class SurfaceController extends Timeline {	
    predicate Surface {};
    predicate Underwater {
    	bool requested;
    };
}

class Navigator extends AgentTimeline {
	
	Navigator(Mode _mode) {
		super(_mode, "Idle");
	}
        Navigator(Mode _mode, bool plan) {
	    super(_mode, "Idle", plan);
        }
	
	predicate Idle {}
	
	predicate Going {
		float latitude, longitude, depth, speed;
		int secs, estimated_duration, duration_interval;
	}
	
	predicate Staying {
		float latitude, longitude, depth;
		int secs;
	}
}



#include "declarations.nddl"
#include "navigator.nddl"
#include "platform.nddl"


SurfaceController::Underwater {
	if( requested==true ) { 
		duration <= 30; // replace by time to surface...
		after(VehicleCommand.Maneuver surface);
		surface.depth == 0;
		surface.end + [8,12] == start;
	}
}

